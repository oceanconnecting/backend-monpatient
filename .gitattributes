# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md text diff=markdown
*.txt text
*.json text
.gitattributes

# Scripts
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Configs
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Graphics
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore 